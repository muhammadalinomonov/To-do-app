<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@color/blue">
        <ImageView
            android:layout_marginStart="8dp"
            android:id="@+id/img_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            tools:ignore="ContentDescription" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Update task"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <Space
            android:padding="8dp"
            android:layout_width="40dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="56dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="16dp"
        tools:ignore="UselessParent">



        <TextView
            android:textStyle="bold"
            android:id="@+id/tv_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:background="?selectableItemBackground"
            android:padding="8dp"
            android:text="Do math homework"
            android:textSize="20sp"
            app:drawableEndCompat="@drawable/ic_edit" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="16dp">

            <ImageView
                android:background="@drawable/bg_icons"
                android:padding="8dp"
                android:layout_gravity="center"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_calendar"
                android:layout_marginEnd="4dp"/>
            <TextView
                android:layout_gravity="center"
                android:id="@+id/tv_task_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="12dp"
                android:text="Task date"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/bg_text_add_todo"
                android:paddingHorizontal="12dp"
                android:textSize="12sp"
                tools:text="January 21,2022" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E3DFDF"/>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="16dp">

            <ImageView
                android:background="@drawable/bg_icons"
                android:padding="8dp"
                android:layout_gravity="center"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_timer"
                android:layout_marginEnd="4dp"/>
            <TextView
                android:layout_gravity="center"
                android:id="@+id/tv_task_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="12dp"
                android:text="Task time"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/bg_text_add_todo"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:textSize="12sp"
                tools:text="12:21 PM" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E3DFDF"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="16dp">

            <ImageView
                android:background="@drawable/bg_icons"
                android:padding="8dp"
                android:layout_gravity="center"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_tag"
                android:layout_marginEnd="4dp"/>
            <TextView
                android:id="@+id/tv_task_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="12dp"
                android:text="Task category"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_category"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/bg_text_add_todo"
                android:drawablePadding="12dp"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:textSize="12sp"
                app:drawableStartCompat="@drawable/ic_university"
                tools:text="University" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E3DFDF"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="16dp">

            <ImageView
                android:background="@drawable/bg_icons"
                android:padding="8dp"
                android:layout_gravity="center"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_flag"
                android:layout_marginEnd="4dp"/>
            <TextView
                android:layout_gravity="center"
                android:id="@+id/tv_task_priority"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="12dp"
                android:text="Task priority"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_gravity=""
                android:id="@+id/tv_priority"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/bg_text_add_todo"
                android:drawablePadding="12dp"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:textSize="12sp"
                app:drawableStartCompat="@drawable/ic_flag_2"
                tools:text="Default" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E3DFDF"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="16dp">

            <TextView
                android:id="@+id/txt_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="12dp"
                android:text="Delete task?"
                android:textColor="#EA1C1C"
                android:textSize="18sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_delete" />





        </LinearLayout>


    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_edit_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="16sp"
        android:layout_marginBottom="16sp"
        android:background="@drawable/bg_intro_btn_next"
        android:text="Update task"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="16sp" />


</FrameLayout>